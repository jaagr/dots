[bar/test]
monitor = eDP-1
width = 200
height = 50
dock = false
lineheight = 10
background = #ff184f
foreground = #fff4fa
linecolor = #c51850
offset_x = 850
offset_y = 450

font-0 = envypn:pixelsize=13;0

modules-center = battery

[module/battery]
type = internal/battery
full_at = 98

format-charging = <animation-charging> <label-charging>
format-charging-underline = ${BAR.linecolor}

label-charging = Charging %percentage%
label-discharging = Discharging %percentage%
label-full = Full %percentage%

animation-charging-0 = Frame #1
animation-charging-1 = Frame #2
animation-charging-2 = Frame #3
animation-charging-3 = Frame #4
animation-charging-4 = Frame #5
animation-charging-framerate_ms = 500

; vim:ft=dosini
